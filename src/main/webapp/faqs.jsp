        .faq-container {
            margin: 0 auto;
            max-width: 800px;
        }
        .faq {
            background-color: #fff;
            margin: 10px 0;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .faq h2 {
